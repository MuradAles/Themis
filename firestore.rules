rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Documents collection - users can only access their own documents
    match /documents/{documentId} {
      // Allow read if user owns the document
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      // Allow write if user owns the document (for updates)
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      // Allow create if user sets their own userId
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      
      // Allow list queries - individual reads are still protected by allow read above
      // The query must filter by userId (which we do in the code)
      allow list: if request.auth != null;
    }
    
    // Source documents collection - users can only access their own source documents
    match /sourceDocuments/{sourceId} {
      // Allow read if user owns the document
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      // Allow write if user owns the document (for updates)
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      // Allow create if user sets their own userId
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      
      // Allow list queries - individual reads are still protected by allow read above
      allow list: if request.auth != null;
    }
    
    // Templates collection - users can access their own templates and system default templates
    match /templates/{templateId} {
      // Allow read if user owns the template OR it's a system default
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.userId || resource.data.isSystemDefault == true);
      
      // Allow update if user owns the template AND it's not a system default
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.userId && 
        resource.data.isSystemDefault == false;
      
      // Allow delete if user owns the template AND it's not a system default
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.userId && 
        resource.data.isSystemDefault == false;
      
      // Allow create if user sets their own userId and not system default
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId &&
        request.resource.data.isSystemDefault == false;
      
      // Allow list queries
      allow list: if request.auth != null;
    }
  }
}